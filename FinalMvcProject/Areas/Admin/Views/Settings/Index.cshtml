@model IEnumerable<FinalMvcProject.Models.Setting>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header">
            <p>
                <a href="@Url.Action("create")" class="btn btn-outline-primary">New Setting</a>
            </p>
            </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HeaderLogo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FooterLogo)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>


                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HeaderLogo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FooterLogo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>


                        <td>
                            <a href="@Url.Action("edit",new { id = item.Id })">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <a onclick="return confirm('Silinsin?')" href="@Url.Action("delete",new { id = item.Id })" class="text-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
    </div>