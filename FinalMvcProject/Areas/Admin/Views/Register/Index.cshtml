@model Admin

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/Admin/Public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/css/sb-admin-2.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" action="@Url.Action("index", "register")" method="post" enctype="multipart/form-data">
                                @Html.ValidationSummary()
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <div class="form-group col-sm-6">
                                        @Html.EditorFor(m => m.Fullname, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Enter Firstname..." } })
                                        @Html.ValidationMessageFor(m => m.Fullname, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "email", @placeholder = "Enter Email Address..." } })
                                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group col-sm-6">
                                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "password", @placeholder = "Enter Password..." } })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "password", @placeholder = "Confirm Password..." } })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group col-sm-6">
                                        @Html.EditorFor(m => m.Role, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "text", @placeholder = "Enter Your Role..." } })
                                        @Html.ValidationMessageFor(m => m.Role, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="custom-file col-sm-4 mx-4">
                                        @Html.LabelFor(m => m.PhotoUpload, new { @class = "custom-file-label" })
                                        @Html.TextBoxFor(m => m.PhotoUpload, new { @class = "custom-file-input", @type = "file" })
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary btn-user btn-block">
                                    Register Account
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Bootstrap core JavaScript-->
    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Admin/Public/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Public/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Areas/Admin/Public/js/sb-admin-2.min.js"> </script>

    <script src="~/Scripts/jquery.validate*"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


</body>

</html>
