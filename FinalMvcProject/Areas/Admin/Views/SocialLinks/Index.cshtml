@model IEnumerable<FinalMvcProject.Models.SocialLink>

@{
    ViewBag.Title = "Index";
}
    <div class="container-fluid">

        <p>
            <a href="@Url.Action("create")" class="btn btn-outline-primary">New Social Link</a>
        </p>
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Icon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderBy)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Icon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderBy)
                    </td>
                    <td>
                        <a href="@Url.Action("edit",new { id = item.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>

                        <a onclick="return confirm('Silinsin?')" href="@Url.Action("delete",new { id = item.Id })" class="text-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>