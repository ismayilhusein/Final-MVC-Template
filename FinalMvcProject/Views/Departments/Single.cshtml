@model DepartmentViewModel

<div id="main-content" class="site-main-content">
    <section class="site-content-area">

        <div class="uni-banner-default uni-background-1">
            <div class="container">
                <!-- Page title -->
                <div class="page-title">
                    <div class="page-title-inner">
                        <h1>single departments</h1>
                    </div>
                </div>
                <!-- End page title -->
                <!-- Breadcrumbs -->
                <ul class="breadcrumbs">
                    <li><a href="@Url.Action("index","home")">home</a></li>
                    <li><a href="#">departments</a></li>
                    <li><a href="#">cardilogy </a></li>
                </ul>
                <!-- End breadcrumbs -->
            </div>
        </div>

        <div class="uni-single-departments-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="uni-single-departments-left">
                            <!--Opening hours-->
                            <div class="uni-single-department-open-hours">
                                <h3 class="uni-single-department-left-title">
                                    Opening hours
                                </h3>
                                <div class="uni-single-department-left-table">
                                    <table class="table">
                                        <tr>
                                            <td>Monday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>tuesday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>wednesday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>thursday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>friday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>saturday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>sunday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <!--Contact us-->
                            <div class="uni-single-department-contact-info">
                                <h3 class="uni-single-department-left-title">
                                    CONTACT INFO
                                </h3>
                                <ul>
                                    <li>
                                        <i class="fa fa-map-marker" aria-hidden="true"></i> @Model.Setting.Location
                                        @Model.Setting.Country
                                    </li>
                                    <li>
                                        <i class="fa fa-phone" aria-hidden="true"></i> @Model.Setting.Number
                                    </li>
                                    <li>
                                        <i class="fa fa-envelope" aria-hidden="true"></i>@Model.Setting.Email
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="uni-single-departments-right">

                            <div class="uni-single-departments-cardiology">
                                <div class="row">
                                    <div class="col-md-5">
                                        <img src="~/Public/images/departments/@Model.Department.Image" alt="" class="img-responsive">
                                    </div>
                                    <div class="col-md-7">
                                        @Html.Raw(Model.Department.Body)
                                    </div>
                                </div>
                            </div>

                            <!--TREATMENTS INVENSTIGATION-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="uni-single-departments-treatments-investigation">
                                        <h3 class="uni-single-departments-right-title">treatments</h3>
                                        <div class="uni-divider"></div>
                                        <ul>
                                            @foreach (var item in Model.Treatments)
                                            {
                                                <li>
                                                    @item.Name <span>@item.Price</span>
                                                </li>
                                            }


                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="uni-single-departments-treatments-investigation">
                                        <h3 class="uni-single-departments-right-title">investigations</h3>
                                        <div class="uni-divider"></div>
                                        <ul>
                                            @foreach (var item in Model.Treatments)
                                            {
                                                <li>
                                                    @item.Name <span>@item.Price</span>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!--DOCTOR-->
                            <div class="uni-single-department-doctor">
                                <h3 class="uni-single-departments-right-title">doctors</h3>
                                <div class="uni-divider"></div>

                                <div class="uni-single-department-doctor-body">
                                    <div class="row">
                                        @foreach (var item in Model.Doctors)
                                        {
                                            <div class="col-md-4">
                                                <div class="uni-single-department-doctor-item">
                                                    <div class="item-img">
                                                        <img src="~/Public/images/team/@item.Photo" alt="" class="img-responsive">
                                                    </div>
                                                    <div class="item-caption">
                                                        <div class="item-caption-head">
                                                            <div class="col-md-3  col-sm-2 col-xs-3 uni-clear-padding">
                                                                <div class="item-icons">
                                                                    <img src="~/Public/images/icons_box/icon_4/@item.Department.Icon" alt="">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-9  col-sm-10 col-xs-9 uni-clear-padding">
                                                                <div class="item-title">
                                                                    <h4>@item.FullName</h4>
                                                                    <span>@item.Department.Title</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="item-caption-info">
                                                            <table class="table">
                                                                <thead>
                                                                    <tr>
                                                                        <td>Degrees</td>
                                                                        <td>@item.Degrees</td>
                                                                    </tr>
                                                                </thead>
                                                                @Html.Raw(item.Body)
                                                                <tfoot>
                                                                    <tr>
                                                                        <td colspan="2">
                                                                            <ul>
                                                                                @foreach (var link in Model.DoctorLinks)
                                                                                {
                                                                                    <li><a href="@link.Url"><i class="fa fa-@link.Icon" aria-hidden="true"></i></a> </li>
                                                                                }


                                                                            </ul>
                                                                        </td>
                                                                    </tr>
                                                                </tfoot>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    </div>
                                </div>
                            </div>

                            <!--APPOINTMENTS-->
                            <div class="uni-single-department-appointment">
                                <h3 class="uni-single-departments-right-title">appointment</h3>
                                <div class="uni-divider"></div>
                                <div class="uni-single-department-appointment-form">
                                    <form action="#">
                                        <div class="row">
                                            <div class="col-md-4">

                                                <div class="input-group form-group">
                                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                    <input type="text" class="form-control" name="name" value="" placeholder="your name">
                                                </div>
                                                <div class="input-group form-group">
                                                    <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                                                    <input type="tel" class="form-control" name="phone" value="" placeholder="phone number">
                                                </div>
                                                <div class="input-group form-group">
                                                    <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                                    <input type="email" class="form-control" name="email" value="" placeholder="email">
                                                </div>
                                                <div class="input-group form-group">
                                                    <div class="input-group date date-check-in" data-date="12-02-2017" data-date-format="mm-dd-yyyy">
                                                        <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                                        <input name="date1" class="form-control" type="text" value="12-02-2017">
                                                        <span class="input-group-addon btn"><i class="fa fa-calendar" id="ti-calendar1" aria-hidden="true"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="input-group form-group">
                                                    <textarea id="message" name="phone" class="form-control" placeholder="note"></textarea>
                                                </div>
                                                <button class="vk-btn vk-btn-send">send</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>