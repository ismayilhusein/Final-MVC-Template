 @model BlogViewModel


 <div id="main-content" class="site-main-content">
                <section class="site-content-area">

                    <div class="uni-banner-default uni-background-1">
                        <div class="container">
                            <!-- Page title -->
                            <div class="page-title">
                                <div class="page-title-inner">
                                    <h1>blog list</h1>
                                </div>
                            </div>
                            <!-- End page title -->
                            <!-- Breadcrumbs -->
                            <ul class="breadcrumbs">
                                <li><a href="#">home</a></li>
                                <li><a href="#">blog</a></li>
                                <li><a href="#">list</a></li>
                            </ul>
                            <!-- End breadcrumbs -->
                        </div>
                    </div>

                    <div class="uni-blog-list-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="uni-blog-list-left">

                                        <!--===========================================-->
                                       @foreach (var item in Model.Blogs)
                                       {
                                        <div class="blog-list-item">
                                            <article class="post type-post">
                                                <div class="content-inner">
                                                    <div class="uni-entry-top">
                                                        <div class="thumbnail-img">
                                                            <a href="@Url.Action("single","blog",item.Id)" title="">
                                                                <img src="~/Public/images/blog_list/main/@item.Image" alt="" title="" class="img-responsive">
                                                            </a>
                                                        </div>
                                                    </div>


                                                    <div class="uni-entry-body">
                                                        <div class="uni-entry-time">
                                                            <ul>
                                                                <li class="year">@item.UpdateYear</li>
                                                                <li class="day">@item.UpdateDay</li>
                                                                <li class="month">@item.UpdateMounth</li>
                                                            </ul>
                                                        </div>
                                                        <div class="uni-entry-content">

                                                            <header class="uni-entry-header">
                                                                <h2 class="uni-entry-title">
                                                                    <a href="@Url.Action("single","blog",item.Id)" rel="">@item.Title</a>
                                                                </h2>
                                                            </header>

                                                            <div class="uni-entry-meta">
                                                                <span class="uni-author">
                                                                    <a href="#" rel="author"><i class="fa fa-calendar" aria-hidden="true"></i> @item.CreatedAt.ToString("MMMM dd ,yyy")</a>
                                                                </span>
                                                                <span class="uni-comment-total">
                                                                    <a href="#" class="comments-link"><i class="fa fa-user" aria-hidden="true"></i> @item.Author.Name</a>
                                                                </span>
                                                                <span class="uni-entry-folder"><a href="#"><i class="fa fa-comment" aria-hidden="true"></i> 2 comments</a></span>
                                                            </div>
                                                            <div class="uni-entry-summary">
                                                                <p>
                                                                    @item.ShortBody
                                                                </p>
                                                            </div>
                                                            <div class="readmore">
                                                                <a href="@Url.Action("single","blog")"><i class="icomoon icon-up"></i>Read More</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                       }
                                        
                                        
                                        <!--===========================================-->
                                       

                                        <!--Pagination blog-->
                                        <div class="uni-divider"></div>
                                        <div class="uni-pagination-blog">
                                            <ul>
                                                <li class="older-post"><a href="#"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> older post</a></li>
                                                <li class="newer-post"><a href="#">newer post <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="uni-blog-list-right">
                                        <aside id="secondary" class="widget-area">
                                            <aside class="widget">
                                                <div class="widget-content">
                                                    <div class="uni-search-sidebar">
                                                        <form action="https://html.univertheme.com/medicare/action.php" method="post" accept-charset="utf-8">
                                                            <div class="vk-newlist-banner-test-search">
                                                                <input type="text" name="seach" placeholder="Search...">
                                                                <button type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </aside>
                                            <aside class="widget">
