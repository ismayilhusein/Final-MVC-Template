@model  List<Doctors>

<div class="uni-home-1-our-doctor">
    <div class="uni-shortcode-team-2 uni-background-2">
        <div class="container">

            <div class="uni-home-title">
                <h3>Our Doctor</h3>
                <div class="uni-underline"></div>
            </div>

            <div class="uni-owl-four-item owl-carousel owl-theme">
                @foreach (var item in  Model)
                {
                    <div class="item">
                        <div class="uni-team-default">
                            <div class="item-img">
                                <img src="~/Upload/doctor/@item.Photo" alt="" class="img-responsive">
                            </div>
                            <div class="item-caption">
                                <div class="col-md-3 col-sm-3 col-xs-3 uni-clear-padding">
                                    <div class="item-icons">
                                        <img src="~/Public/images/icons_box/icon_4/@item.Department.Icon" alt="">
                                    </div>
                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-9 uni-clear-padding">
                                    <div class="item-title">
                                        <h4>@item.FullName</h4>
                                        <span>@item.Degrees</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>
