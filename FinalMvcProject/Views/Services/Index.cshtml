@model ServiceViewModel

<div id="main-content" class="site-main-content">
    <section class="site-content-area">

        <div class="uni-banner-default uni-background-1">
            <div class="container">
                <!-- Page title -->
                <div class="page-title">
                    <div class="page-title-inner">
                        <h1>services</h1>
                    </div>
                </div>
                <!-- End page title -->
                <!-- Breadcrumbs -->
                <ul class="breadcrumbs">
                    <li><a href="#">home</a></li>
                    <li><a href="#">services</a></li>
                </ul>
                <!-- End breadcrumbs -->
            </div>
        </div>

        <div class="uni-services-body">

            <!--OUR SERVICES 1-->
            <div class="uni-our-services-1">
                <div class="container">
                    <div class="uni-services-title">
                        <h3>Our services</h3>
                        <div class="uni-underline"></div>
                    </div>
                </div>
                @{
                    Html.RenderPartial("~/Views/Shared/_Services.cshtml",model:Model.Services);
                }
            </div>

            <!--OUR SERVICES 2-->
            @{
                Html.RenderPartial("~/Views/Shared/_ServiceItem.cshtml");
            }

            <!--DEPARTMENT, TESTIMONIAL, OPNING HOURES-->
            <div class="uni-services-de-test-hours">
                <div class="container">
                    <div class="row">
                        <!--DEPARTMENTS-->
                        @{
                            Html.RenderPartial("~/Views/Shared/_Departments.cshtml",model:Model.Departments);
                        }

                        @{
                            Html.RenderPartial("~/Views/Shared/_Testimonials.cshtml",model:Model.CustomerSliders);
                        }

                        <!--OPENING HOURS-->
                        <div class="col-md-4">
                            <div class="uni-services-opinging-hours">
                                <div class="uni-services-opinging-hours-title">
                                    <div class="icon">
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                                    </div>
                                    <h4>opening hours</h4>
                                </div>
                                <div class="uni-services-opinging-hours-content">
                                    <table class="table">
                                        <tr>
                                            <td>monday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>tuesday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>wednesday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>thursday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>friday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                        <tr>
                                            <td>sunday</td>
                                            <td>8:00 - 17:00</td>
                                        </tr>
                                    </table>
                                    <a href="#" class="book-appointment">Book appointments</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>
</div>